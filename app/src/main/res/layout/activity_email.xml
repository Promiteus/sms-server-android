<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".EmaiActivity"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="12dp"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"

        android:paddingBottom="4dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">



        <TextView
            android:id="@+id/tvEmailCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="ВАШ EMAIL"
            android:textColor="@color/white"
             />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="4dp"
            android:background="@drawable/roundrect_input"
            android:hint="sample@domain.ru"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorLogText"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="110dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp"
            android:text="ОТПРАВИТЬ"
            android:background="@drawable/roundrect_params"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/serverLogFrame"
            android:padding="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/black"
            >

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@mipmap/download_from_cloud_350"/>

          <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:text="Просто текстовое поле, которое дает справку о том, что нужно делать в этом окне"
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:textSize="16sp"
            android:textStyle="italic"
            app:fontFamily="sans-serif"


            />


        </FrameLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>